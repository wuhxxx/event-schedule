    "author": "Hongxin Wu (github.com/wuhxxx)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/wuhxxx/event-schedule-server/issues"
    },
    "homepage": "https://github.com/wuhxxx/event-schedule-server#readme",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.18.3",
        "cli-color": "^1.3.0",
        "express": "^4.16.3",
        "joi": "^13.6.0",
        "jsonwebtoken": "^8.3.0",
        "mongoose": "^5.2.14",
        "passport": "^0.4.0",
        "passport-jwt": "^4.0.0",
        "winston": "^2.4.4",
        "winston-console-formatter": "^1.0.0-beta.3"
