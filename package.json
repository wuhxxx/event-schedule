{
    "name": "event-schedule",
    "version": "1.0.0",
    "description": "An event schedule web application, inspired by codyHouse's simple-schedule template",
    "main": "server.js",
    "scripts": {
        "test": "mocha",
        "start": "node server.js",
        "dev-client": "cd client && npm start",
        "build-client": "cd client && npm run build",
        "install-both": "npm install && cd client && npm install",
        "heroku-postbuild": "cd client && npm install && npm run build",
        "dev-server": "export NODE_ENV=development && nodemon server.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/wuhxxx/event-schedule-server.git"
    },
